            background-color: #fff3cd;
            color: #856404;
        }
        
        .status-blue {
            background-color: #d1ecf1;
            color: #0c5460;
        }
        
        .btn-pagination {
            background-color: #310357;
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .btn-pagination:hover:not(:disabled) {
            background-color: #4a0a6e;
            transform: translateY(-2px);
        }
        
        .btn-pagination:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .page-info {
            font-size: 16px;
            font-weight: 600;
            color: #333;
            margin: 0 15px;
        }
        
        .list-unstyled {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .list-unstyled li {
            padding: 2px 0;
            font-size: 12px;
        }
        
        .text-muted {
            color: #6c757d;
        }
        
        .text-danger {
            color: #dc3545;
        }
        
        .btn-sm {
            padding: 5px 10px;
            font-size: 12px;
            border-radius: 3px;
            margin: 0 2px;
            border: none;
            cursor: pointer;
        }
        
